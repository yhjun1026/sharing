/**
 * 我的券
 */
.tab-box {
  width:100%;
  background: #ffffff;
  position:fixed;
  font-size:30rpx;
  z-index:9999;
  top:150rpx;
  left:0;
  padding: 24rpx 3rpx;
  border-bottom: 1rpx solid #cccccc;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
}
.tab-item{
  display:block;
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  text-align: center;
  border-right:1rpx solid #cccccc;
}
.myticket-content {
  margin: 250rpx 0 0 0;
  height: 1000rpx;
  padding: 0;
  background-color:#cccccc;
}
.weui-navbar__slider {
  position:absolute;
  content:" ";
  left:0;
  bottom:0;
  width:8em;
  height:2px;
  -webkit-transition:-webkit-transform .3s;
  transition:-webkit-transform .3s;
  transition:transform .3s;
  transition:transform .3s, -webkit-transform .3s;
}
.userinfo {
  width:750rpx;
  background: #ffffff;
  position:fixed;
  font-size:28rpx;
  margin:0 0 8rpx 0;
  z-index:9999;
  top:0;
  left:0;
  height: 132rpx;
  padding-left: 74rpx;
  padding-top:18rpx;
  background: #2abfff;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 0rpx;
  border-radius: 50%;
  border: solid 6rpx #95dfff;
  vertical-align: middle;
}

.userinfo-nickname {
  color: #ffffff;
  margin-left: 26rpx;
  background: #22a7eb;
  padding:8rpx 34rpx;
  border-radius: 25rpx;
  line-height: 44rpx;
  font-size: 26rpx;
}

.ticket-container {
  background: #e0e0e0;
  flex: 1;
}

.ticket-item {
  display: flex;
  flex-direction: column;
  margin: 0 0 15rpx;
  padding: 0 15px;
  background: #ffffff
}

.ticket-item-main {
  display: flex;
  flex-direction: row;
}

.ticket-item-content{
  display: flex;
  flex-direction: column;
  flex:1;
  margin: 13rpx 0 0;

}

.ticket-item-title {
  font-size: 32rpx;
  color: #333333;
}

.ticket-item-validdate {
  font-size: 26rpx;
  color: #666666;
}

.ticket-item-number {
  font-size: 46rpx;
  color: #ff4e5a;
  padding:20rpx 30rpx;
}
.ticket-item-unit {
  font-size: 28rpx;
}

.ticket-item-footer {
  font-size: 14px;
  position: relative;
  padding: 20rpx 0;
  display: flex;
  direction: row;
  justify-content: center;
  align-content: center;
}

.ffan-btn-endtime {
  font-size: 28rpx;
  padding: 16rpx;
  color: #ff4e5a;
  background-color: #ffffff;
  border:solid 1px #ff4e5a;
}

.ticket-item-footer::after {
  content:" ";
  position:absolute;
  left:0;
  top:0;
  right:0;
  height:1px;
  color:#D9D9D9;
  border-bottom: solid 1px #cccccc;
}

.ticket-item-code {
  color: #ff4e5a;
  font-size: 36rpx;
}
.ticket-item-ftcontent {
  flex: 1;
  color: #666666;
  font-size: 26rpx;
  align-self: center;
}
.ticket-item-imgcode {
  margin-right: 5px;
  width:18px;
  height: 12px;
}
.ticket-item-extra {
  align-self: center;
}
.ticket-item-type {
  font-size: 36rpx;
}
.ticket-not-logged {
  margin: 100px auto;
  color: #2abfff;
  text-align: center;
}
.quan-wrapper{
  text-align: center;
  margin: 250rpx 0 0 0;
  height: 1000rpx;
  padding: 0;
  background-color:#ffffff;
}
.quan-null{
  width:220rpx;
  margin: 110rpx auto 0;
}
.quan-text{
  color:#666666;
  font-size:32rpx;
  margin: 30rpx auto 197rpx;
}
