page {
  height: 100%;
  background-color: #15b6ff;
}
.bg {
    width: 100%;
    padding-top: 20rpx;
    padding-bottom: 40rpx;
}

.main-box {
    background-color: #fff;
    margin: 0 auto;
    border-bottom: 1rpx solid #15b6ff;
    border-radius: 10rpx;
    width: 710rpx;
    text-align: center;
}

.text-center {
    text-align: center;
}

.text-left {
    text-align: left;
}

.text-line-1 {
  text-align: center;
  margin: 0 auto;
  padding-top: 50rpx;
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow : hidden;
  width: 690rpx;
  color: #333;
}

.text-line-2 {
    font-size: 60rpx;
    color: #ff4e5a;
}

.text-line-3 {
    color: #999;
    font-size: 22rpx;
    padding-top: 30rpx;
    padding-bottom: 40rpx;
}

.coupon-btn {
    margin-top: 30rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 10rpx;
    width: 216rpx;
    color: #fff;
    font-size: 28rpx;
}

.valid-btn {
    background-color: #ff4e5a;
}

.invalid-btn {
    background-color: #666;
}

.coupon-bd {
    font-size: 32rpx;
    color: #333;
}

.coupon-pic {
    width: 100%;
}

.coupon-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.coupon-cell:last-child{
  margin-bottom: 60px;
}
.coupon-cell:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
  left: 15px;
  right: 15px;
}

.coupon-panel__hd:after {
  right: 15px;
}

