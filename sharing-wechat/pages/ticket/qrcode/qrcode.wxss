/* pages/ticket/qrcode.wxss */
page {
  height: 100%;
  background-color: #15b6ff;
}
.bg {
    width: 100%;
    padding-top: 20rpx;
    padding-bottom: 40rpx;
}

.main-box {
    background-color: #fff;
    margin: 0 auto;
    border-bottom: 1rpx solid #15b6ff;
    border-radius: 10rpx;
    width: 710rpx;
    text-align: center;
}

.text-center {
    text-align: center;
}

.text-left {
    text-align: left;
}

.text-line-1 {
    padding: 50rpx 0;
    font-size: 28rpx;
    text-overflow: ellipsis;
    overflow : hidden;
    width: 690rpx;
    color: #333;
}

.text-line-2 {
    font-size: 60rpx;
    color: #ff4e5a;
}

.text-line-3 {
    color: #999;
    font-size: 22rpx;
    padding-top: 30rpx;
    padding-bottom: 40rpx;
}

.coupon-btn {
    margin-top: 30rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 10rpx;
    width: 216rpx;
    color: #fff;
    font-size: 28rpx;
}
.page__desc{
  font-size:15px;
  color:#666666;
  text-align: center;
}
.quan{
  width:18px;
  height:12px;
  margin-right: 7px;
}
.text-color{
  color:#ff4e5a;
  font-size: 20px;
}
.valid-btn {
    background-color: #ff4e5a;
}

.invalid-btn {
    background-color: #666;
}

.coupon-bd {
    font-size: 32rpx;
    color: #333;
}

.coupon-pic {
    width: 100%;
}

.coupon-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}

.coupon-cell:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
  left: 15px;
  right: 15px;
}

.coupon-panel__hd:after {
  right: 15px;
}
.weui-panel__hd::after{
  border-bottom: none;
  text-align: center;
}
.box{
  padding-top:10px;
  margin:0px 26px 61px;
  border:1rpx solid #eeeeee;
}
.qrcode-box{
  padding:40px 0;
  background: #F0F0F2;
  border-top:1rpx solid #eeeeee;
}
