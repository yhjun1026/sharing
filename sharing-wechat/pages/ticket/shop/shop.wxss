/* pages/ticket/shop.wxss */
.total{
  padding:13px 16px 9px 15px;
  background: #cccccc;
  color:#333333;
  font-size: 16px;
  font-family: PingFangSC-Regular, sans-serif;
}
.shop-wrapper{
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  color: #666666;
  background:#ffffff;
}
.shop-list{
  margin-left: 15px;
  padding:15px 0;
  border-bottom: 1rpx solid #D9D9D9;
}
.shop-list:last-child{
  border-bottom: 0;
}
.shop-name{
  font-size: 16px;
  font-family: PingFangSC-Medium, sans-serif;
}
.shop-address{
  color: #858585;
  font-family: PingFangSC-Regular, sans-serif;
  font-size: 11px;
}
.distance{
  color: #666666;
  font-size: 14px;
}
.map-wrapper{
  width:84px;
  line-height: 20px;
  text-align: center;
  color: #333333;
  border-left: 1rpx solid #D9D9D9;
}
.map{
  width:18px;
  height:21px;
}